<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.util.Duration?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" prefWidth="280.0"
         type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/20.0.1">
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" prefWidth="250.0"
          spacing="15">
        <Label text="The task has been assigned as COMPLETED. Describe, with few words, what has been achieved by completing this task. You can do this anytime when editing a task."
               VBox.vgrow="ALWAYS"
               wrapText="true"
               textAlignment="JUSTIFY">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Label>
        <TextField fx:id="achieved" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </TextField>
        <CheckBox fx:id="notShow" text="Disable this popup.">
            <tooltip>
                <Tooltip
                        text="If selected, this popup will no longer be shown after a task is completed. You can change this again in Settings.">
                    <showDelay>
                        <Duration millis="500"/>
                    </showDelay>
                    <showDuration>
                        <Duration millis="Infinity"/>
                    </showDuration>
                </Tooltip>
            </tooltip>
        </CheckBox>
        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="buttonAdd" mnemonicParsing="false"
                    text="Add achievement"/>
        </HBox>
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</fx:root>
