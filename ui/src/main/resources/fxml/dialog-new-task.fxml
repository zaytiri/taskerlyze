<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/20.0.1">
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <Label text="Input new task's details:">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Label>
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="67.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="133.0" minWidth="10.0" prefWidth="133.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Name:"/>
            <Label text="Category:" GridPane.rowIndex="1"/>
            <Label text="Description:" GridPane.rowIndex="2"/>
            <Label text="URL:" GridPane.rowIndex="3"/>
            <Label text="Priority:" GridPane.rowIndex="4"/>
            <TextField GridPane.columnIndex="1" fx:id="name"/>
            <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="category"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="description"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="url"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="priority"/>
        </GridPane>
        <Label fx:id="errorMessage" textFill="darkred">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Label>
        <Button mnemonicParsing="false" text="Create" fx:id="buttonCreate">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</fx:root>
