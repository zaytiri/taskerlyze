<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         type="javafx.scene.control.Accordion"
         fx:id="mainTasks"
         id="tasks-accordion">
    <panes>
        <TitledPane
                fx:id="notFoundMessage"
                collapsible="false">
            <graphic>
                <BorderPane>
                    <center>
                        <Label text="No tasks found. Create a new task to get started."/>
                    </center>
                </BorderPane>
            </graphic>
        </TitledPane>
    </panes>
</fx:root>
