<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/tasks-tab-view.css"
         type="javafx.scene.control.Accordion" xmlns="http://javafx.com/javafx/"
         id="sub-tasks-accordion" fx:id="subTasksAccordion">
    <panes>
        <TitledPane
                fx:id="notFoundMessage"
                collapsible="false">
            <graphic>
                <BorderPane>
                    <center>
                        <Label id="not-found-message" text="No sub tasks found."/>
                    </center>
                </BorderPane>
            </graphic>
        </TitledPane>
        <!-- populate list of ComponentSubTask-->
    </panes>
</fx:root>
